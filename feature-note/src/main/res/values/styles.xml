<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Text Styles     -->

    <style name="Headline">
        <item name="android:fontFamily">@font/quattrosentosans_bold</item>
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="Headline.h1" parent="Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline.h2" parent="Headline">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.b1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Secondary">
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Secondary.b1">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="FabShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeAppearance</item>
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TitleTextStyling">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ContentTextStyling">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>